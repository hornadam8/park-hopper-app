<div class="container">
  <header><img src="<%=@park.image%>"
                alt=""
                title=""
                width="1430"
                height="750"
                class="img-responsive main-image">
  </header>

    <div align="left"><h1><%=@user.name%></h1>

    <form action="/users/<%=@user.id%>" method="POST">
      <input type="hidden" id="hidden" name="_method" value="PATCH">
      <textarea type="text" style="margin: 0px; height: 25 px; width: 50 px; font-size: 20px; text-align: center;" name="user[name]"><%=@user.name%></textarea></center><br><br>
      <a class="btn" type="submit" value="submit">Apply Changes</a>
    </form>

    <form action="/users/<%=@user.id%>" method="POST">
      <input type="hidden" id="hidden" name="_method" value="DELETE">
      <a class="btn" type="submit" value="submit">Delete Profile</a>
    </form>

    <a class="btn" href="/users/<%=@user.id%>" class="btn-more">Cancel</a></div>

    <ul class="horizontal gray">
      <%if session[:user_id] == @user.id%>
        <a class="btn" href="/logout" style="float:right">Logout</a>
      <%end%>
      <a class="btn" href="/parks" style="float:right">Home</a>
    </ul>
    <br>

  <div align="left"><h2><%=@user.name.split(" ").first%>'s Recent Trips</h2></div>
  <div class="grid-container">

    <%@rows.each do |trip|%>

      <%if trip[0]%>
        <div class="item<%=@i%>">
          <img src="<%=trip[0].park.image%>"
                width="307"
                height="217">
          <h2><%=trip[0].park.name%></h2>
          <p><%=trip[0].park.description%></p>
          <a class="btn" href="/trips/<%=trip[0].id%>">View this trip!</a> </div>
        <%@i += 1%>
